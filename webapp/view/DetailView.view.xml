<mvc:View controllerName="app.miningodata.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="DetailPage" title="{i18n>title3}" showNavButton="true" navButtonPress="onPress">
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" class="customForm"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
                
                <Label text="Location ID" class="customLabel"></Label>
                <Text text="{MiningModel>LocId}" id="text1D" class="customText"></Text>

                <Label text="Location Description" class="customLabel"></Label>
                <Text text="{MiningModel>LocDesc}" id="text2D" class="customText"></Text>

                <Label text="Mining Resource" class="customLabel"></Label>
                <Text text="{MiningModel>MinRes}" id="text3D" class="customText"></Text>

                <Label text="Total Cost" class="customLabel"></Label>
                <Text text="{MiningModel>TotCost}" id="text4D" class="customText"></Text>

                <Label text="Report on Mineral" class="customLabel"></Label>
                <Text text="{MiningModel>RepMin}" id="text5D" class="customText"></Text>

                <Label text="Number of Drills" class="customLabel"></Label>
                <Text text="{MiningModel>NumDrills}" id="text6D" class="customText"></Text>

                <Label text="Type of Mineral" class="customLabel"></Label>
                <Text text="{MiningModel>MinType}" id="text7D" class="customText"></Text>

                <Label text="Man Days" class="customLabel"></Label>
                <Text text="{MiningModel>ManDays}" id="text8D" class="customText"></Text>

                <Label text="Probability of Outcome" class="customLabel"></Label>
                <Text text="{MiningModel>ProbOut}" id="text9D" class="customText"></Text>

                <Label text="Currency" class="customLabel"></Label>
                <Text text="{MiningModel>MinCuky}" id="text10D" class="customText"></Text>

            </f:SimpleForm>
            <FlexBox justifyContent="End">
                <items>
                    <Button id="idButtonEdt" text="Edit" press="onEdit" class="sapUiSmallMarginEnd customButton" type="Emphasized"></Button>
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
